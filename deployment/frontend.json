{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "commit": true,
      "pull": true,
      "changes": ["WORKDIR /"]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "frontend_provision.yml"
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "lemmingpants-frontend",
      "tag": "latest"
    }
  ]
}
