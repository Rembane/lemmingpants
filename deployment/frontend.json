{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "commit": true,
      "pull": false,
      "changes": ["WORKDIR /", "VOLUME /setup"]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "frontend_provision.yml"
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "dtek/lemmingpants-frontend",
      "tag": "{{timestamp}}"
    }
  ]
}
